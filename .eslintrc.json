{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "globalReturn": true
        }
    },
    "rules": {
      "no-unused-vars": ["error", { "argsIgnorePattern":  "next"}],
      "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
    }
}
